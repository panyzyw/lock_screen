   <item android:drawable="@drawable/yun6" android:duration="200"></item>
     <item android:drawable="@drawable/yun7" android:duration="200"></item>
     <item android:drawable="@drawable/yun8" android:duration="200"></item>
     <item android:drawable="@drawable/yun9" android:duration="200"></item>
     <item android:drawable="@drawable/yun10" android:duration="200"></item>
     <item android:drawable="@drawable/yun11" android:duration="200"></item>
     <item android:drawable="@drawable/yun12" android:duration="200"></item>
     <item
        android:drawable="@drawable/normal10"
        android:duration="200"/>
</animation-list>
